#!/bin/bash

# TMUX plugins
# rm -rf ~/.tmux/plugins/tpm
# git clone -q https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

# TMUX configuration
path=$(pwd)
ln -s -f $path/tmux.conf $HOME/.tmux.conf

